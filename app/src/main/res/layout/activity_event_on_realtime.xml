<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mipo_party_real_time"
        android:id="@+id/artistTitle"
        android:textColor="#480101"
        android:layout_marginTop="57dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="string/gust_entered"
        android:id="@+id/sumGuestTV"
        android:textSize="20sp"
        android:textColor="#480101"
        android:layout_above="@+id/scannerButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qr_scanner"
        android:onClick="addGuest"
        android:id="@+id/scannerButton"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:textColor="#480101" />
</RelativeLayout>