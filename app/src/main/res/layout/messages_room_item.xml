<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/message_itemIV"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/no_image_icon_md" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/message_item_nameTV"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/message_itemIV"
        android:layout_toEndOf="@+id/message_itemIV" />

    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/message_item_bodyTV"
        android:textSize="16sp"
        android:layout_below="@+id/message_item_nameTV"
        android:layout_toRightOf="@+id/message_itemIV"
        android:layout_toEndOf="@+id/message_itemIV" />
</RelativeLayout>